<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="config"
            type="cz.zcu.fav.tymsnu.stimulatorremotecontrol.model.AConfiguration" />
    </data>

    <LinearLayout
        android:id="@+id/control_scheme_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/control_list_view_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            app:imageResource="@{config.statusIcon}"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/control_list_view_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{config.name}"
                android:textAppearance="?attr/textAppearanceListItem" />

            <TextView
                android:id="@+id/control_list_view_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{config.corrupted ? @string/corrupted_configuration : @string/output_count(config.loaded ? config.stringOutputCount : @string/output_count_unknown)}' />
        </LinearLayout>

        <ImageView
            android:id="@+id/control_list_view_image_changed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/content_save"
            android:visibility="@{config.changed ? View.VISIBLE : View.GONE}" />

    </LinearLayout>
</layout>